{
	"name": "Tab Utility",
	"version": "1.0",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": [
				"https://*/*"
			],
			"js": [
				"loader.js"
			]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": [
		"alarms",
		"storage",
		"tabs",
		"downloads"
	]
}