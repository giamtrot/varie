{
  "manifest_version": 3,
  "name": "Bolder - Unicode Text Converter",
  "version": "1.1",
  "description": "Convert text to bold/italic unicode characters.",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content_loader.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/utils.js",
        "dist/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}