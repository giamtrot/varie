{
	"name": "Word Reference Utility",
	"version": "1.0",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"loader.js"
			]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"host_permissions": [
		"<all_urls>"
	],
	"permissions": [
		"activeTab",
		"contextMenus",
		"tabs",
		"scripting"
	],
	"icons": {
		"192": "icon-192.png"
	},
	"commands": {
		"execute-generic-on-click": {
			"suggested_key": {
				"default": "Ctrl+Shift+F"
			},
			"description": "Execute Generic On Click"
		}
	}
}