{
  "manifest_version": 2,
  "name": "Background Plugin",
  "description": "This extension will add features to my Chrome",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "*://www.egoallstars.com/*",
      "*://www.egotastic.com/*",
      "http://localhost:9080/*"
    ]
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}